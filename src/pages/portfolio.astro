---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Portfolio - Studio Madara" description="Découvrez nos réalisations en branding et vidéo">
  <Header />
  <main>
    <section class="portfolio-hero section-padding">
      <div class="container">
        <div class="hero-content fade-in">
          <h1>Portfolio</h1>
          <p>Découvrez quelques-unes de nos réalisations les plus marquantes</p>
        </div>
      </div>
    </section>

    <section class="portfolio-grid section-padding">
      <div class="container">
        <div class="filters fade-in">
          <button class="filter-btn active" data-filter="all">Tout</button>
          <button class="filter-btn" data-filter="branding">Branding</button>
          <button class="filter-btn" data-filter="video">Vidéo</button>
        </div>

        <div class="grid">
          <div class="portfolio-item fade-in stagger-1" data-category="branding">
            <div class="item-image">
              <img src="https://images.pexels.com/photos/196644/pexels-photo-196644.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Projet Branding 1" />
              <div class="item-overlay">
                <h3>Identité Corporate</h3>
                <p>Branding complet pour une startup tech</p>
                <span class="category">Branding</span>
              </div>
            </div>
          </div>

          <div class="portfolio-item fade-in stagger-2" data-category="video">
            <div class="item-image">
              <img src="https://images.pexels.com/photos/3062541/pexels-photo-3062541.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Projet Vidéo 1" />
              <div class="item-overlay">
                <h3>Clip Promotionnel</h3>
                <p>Vidéo corporate pour présenter l'entreprise</p>
                <span class="category">Vidéo</span>
              </div>
            </div>
          </div>

          <div class="portfolio-item fade-in stagger-3" data-category="branding">
            <div class="item-image">
              <img src="https://images.pexels.com/photos/834894/pexels-photo-834894.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Projet Branding 2" />
              <div class="item-overlay">
                <h3>Restaurant Moderne</h3>
                <p>Identité visuelle et supports de communication</p>
                <span class="category">Branding</span>
              </div>
            </div>
          </div>

          <div class="portfolio-item fade-in stagger-4" data-category="video">
            <div class="item-image">
              <img src="https://images.pexels.com/photos/2608517/pexels-photo-2608517.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Projet Vidéo 2" />
              <div class="item-overlay">
                <h3>Documentaire Court</h3>
                <p>Tournage et montage d'un mini-documentaire</p>
                <span class="category">Vidéo</span>
              </div>
            </div>
          </div>

          <div class="portfolio-item fade-in stagger-1" data-category="branding">
            <div class="item-image">
              <img src="https://images.pexels.com/photos/1090638/pexels-photo-1090638.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Projet Branding 3" />
              <div class="item-overlay">
                <h3>Marque de Mode</h3>
                <p>Logo et direction artistique complète</p>
                <span class="category">Branding</span>
              </div>
            </div>
          </div>

          <div class="portfolio-item fade-in stagger-2" data-category="video">
            <div class="item-image">
              <img src="https://images.pexels.com/photos/3062526/pexels-photo-3062526.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Projet Vidéo 3" />
              <div class="item-overlay">
                <h3>Publicité Produit</h3>
                <p>Mise en scène et montage dynamique</p>
                <span class="category">Vidéo</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .portfolio-hero {
    background: var(--gradient-hero);
    padding-top: 120px;
    text-align: center;
  }

  .portfolio-hero h1 {
    margin-bottom: 16px;
    color: var(--color-dark);
  }

  .portfolio-hero p {
    font-size: 20px;
    color: var(--color-gray);
    max-width: 600px;
    margin: 0 auto;
  }

  .portfolio-grid {
    background: var(--color-white);
  }

  .filters {
    display: flex;
    justify-content: center;
    gap: 16px;
    margin-bottom: 48px;
  }

  .filter-btn {
    background: transparent;
    border: 2px solid var(--color-border);
    padding: 12px 24px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    color: var(--color-gray);
    font-weight: 500;
  }

  .filter-btn:hover,
  .filter-btn.active {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-white);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 32px;
  }

  .portfolio-item {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .portfolio-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 13, 255, 0.15);
  }

  .item-image {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
  }

  .item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .portfolio-item:hover .item-image img {
    transform: scale(1.05);
  }

  .item-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
    color: var(--color-white);
    padding: 32px 24px 24px;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .portfolio-item:hover .item-overlay {
    transform: translateY(0);
  }

  .item-overlay h3 {
    font-size: 20px;
    margin-bottom: 8px;
  }

  .item-overlay p {
    color: #ccc;
    margin-bottom: 12px;
    line-height: 1.4;
  }

  .category {
    display: inline-block;
    background: var(--color-primary);
    color: var(--color-white);
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .portfolio-item.hidden {
    display: none;
  }

  @media (max-width: 768px) {
    .portfolio-hero {
      padding-top: 100px;
    }

    .grid {
      grid-template-columns: 1fr;
    }

    .filters {
      flex-wrap: wrap;
    }

    .filter-btn {
      padding: 10px 20px;
      font-size: 14px;
    }
  }
</style>

<script>
  // Portfolio filtering
  const filterBtns = document.querySelectorAll('.filter-btn');
  const portfolioItems = document.querySelectorAll('.portfolio-item');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      // Remove active class from all buttons
      filterBtns.forEach(b => b.classList.remove('active'));
      // Add active class to clicked button
      btn.classList.add('active');

      const filter = btn.getAttribute('data-filter');

      portfolioItems.forEach(item => {
        const category = item.getAttribute('data-category');
        
        if (filter === 'all' || category === filter) {
          item.classList.remove('hidden');
        } else {
          item.classList.add('hidden');
        }
      });
    });
  });
</script>