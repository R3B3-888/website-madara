---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Tarifs - Madara Studio" description="Découvrez nos tarifs pour le branding et la vidéo">
  <Header />
  <main>
    <section class="pricing-hero section-padding">
      <div class="container">
        <div class="hero-content fade-in">
          <h1>Tarifs</h1>
          <p>Des solutions adaptées à vos besoins et votre budget</p>
        </div>
      </div>
    </section>

    <section class="pricing-section section-padding" id="branding">
      <div class="container">
        <div class="pricing-header fade-in">
          <h2>Branding</h2>
          <p>Création d'identités visuelles fortes et mémorables</p>
        </div>

        <div class="pricing-cards">
          <div class="pricing-card fade-in stagger-1">
            <div class="card-header">
              <h3>Forfait Essentiel</h3>
              <div class="price">
                <span class="amount">500</span>
                <span class="currency">€</span>
              </div>
            </div>
            <div class="card-content">
              <p class="card-description">Parfait pour des missions courtes et ciblées</p>
              <ul class="features">
                <li>Logo personnalisé</li>
                <li>Typographies personnalisées</li>
                <li>Couleurs personnalisées</li>
                <li>Révision offerte</li>
              </ul>
            </div>
            <div class="card-footer">
              <a href="/contact" class="btn btn-secondary">Demander un devis</a>
            </div>
          </div>

          <div class="pricing-card featured fade-in stagger-2">
            <div class="featured-badge">Recommandé</div>
            <div class="card-header">
              <h3>Forfait Premium</h3>
              <div class="price">
                <span class="amount">1500</span>
                <span class="currency">€</span>
              </div>
            </div>
            <div class="card-content">
              <p class="card-description">Solution complète pour une identité de marque cohérente</p>
              <ul class="features">
                <li>Création du logo et variations</li>
                <li>Charte graphique complète</li>
                <li>Mockups</li>
                <li>Guide d'utilisation</li>
                <li>Premier mois de support</li>
              </ul>
            </div>
            <div class="card-footer">
              <a href="/contact" class="btn btn-primary">Démarrer le projet</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="pricing-section section-padding" id="video">
      <div class="container">
        <div class="pricing-header fade-in">
          <h2>Vidéo</h2>
          <p>Du tournage au montage, créons ensemble des contenus percutants</p>
        </div>

        <div class="pricing-cards">
          <div class="pricing-card fade-in stagger-1">
            <div class="card-header">
              <h3>Tournage</h3>
              <div class="price">
                <span class="amount">500</span>
                <span class="currency">€</span>
              </div>
            </div>
            <div class="card-content">
              <p class="card-description">Captation professionnelle de vos contenus</p>
              <ul class="features">
                <li>Déplacements</li>
                <li>Matériel haute qualité fourni</li>
                <li>Pré-production et repérages</li>
                <li>Tournage professionnel</li>
                <li>Fichiers bruts livrés</li>
              </ul>
            </div>
            <div class="card-footer">
              <a href="/contact" class="btn btn-secondary">Réserver</a>
            </div>
          </div>

          <div class="pricing-card featured fade-in stagger-3">
            <div class="featured-badge">Populaire</div>
            <div class="card-header">
              <h3>Tournage + Montage</h3>
              <div class="price">
                <span class="amount">900</span>
                <span class="currency">€</span>
              </div>
            </div>
            <div class="card-content">
              <p class="card-description">Prestation complète de A à Z</p>
              <ul class="features">
                <li>Tout le forfait tournage</li>
                <li>Montage et assemblage</li>
                <li>Étalonnage des couleurs</li>
                <li>Sound design</li>
                <li>Formats adaptés</li>
                <li>Coordination optimisée</li>
              </ul>
            </div>
            <div class="card-footer">
              <a href="/contact" class="btn btn-primary">Choisir cette offre</a>
            </div>
          </div>
        </div>
      </div>
    </section>

  </main>
  <Footer />
</Layout>

<style>
  .pricing-hero {
    background: var(--gradient-hero);
    padding-top: 120px;
    text-align: center;
  }

  .pricing-hero h1 {
    margin-bottom: 16px;
    color: var(--color-dark);
  }

  .pricing-hero p {
    font-size: 20px;
    color: var(--color-gray);
    max-width: 600px;
    margin: 0 auto;
  }

  .pricing-section {
    background: var(--color-white);
  }

  .pricing-section:nth-child(odd) {
    background: var(--color-light-gray);
  }

  .pricing-header {
    text-align: center;
    margin-bottom: 64px;
  }

  .pricing-header h2 {
    margin-bottom: 16px;
    color: var(--color-dark);
  }

  .pricing-header p {
    font-size: 18px;
    color: var(--color-gray);
    max-width: 600px;
    margin: 0 auto;
  }

  .pricing-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 32px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .pricing-card {
    background: var(--color-white);
    border-radius: 16px;
    padding: 32px;
    position: relative;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .pricing-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 13, 255, 0.1);
  }

  .pricing-card.featured {
    border-color: var(--color-primary);
    transform: scale(1.05);
  }

  .pricing-card.featured:hover {
    transform: scale(1.05) translateY(-8px);
  }

  .featured-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-primary);
    color: var(--color-white);
    padding: 8px 24px;
    border-radius: 20px;
    font-size: 14px;
    font-weight: 600;
  }

  .card-header {
    text-align: center;
    margin-bottom: 32px;
  }

  .card-header h3 {
    word-spacing: 5px;
    font-size: 24px;
    margin-bottom: 16px;
    color: var(--color-dark);
  }

  .price {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 4px;
  }

  .currency {
    font-size: 20px;
    color: var(--color-primary);
    font-weight: 600;
  }

  .amount {
    font-size: 48px;
    font-weight: 700;
    color: var(--color-dark);
  }

  .card-description {
    text-align: center;
    margin-bottom: 24px;
    color: var(--color-gray);
    font-size: 16px;
  }

  .features {
    word-spacing: 2px;
    list-style: none;
    margin-bottom: 32px;
  }

  .features li {
    padding: 8px 0;
    position: relative;
    padding-left: 24px;
    color: var(--color-gray);
  }

  .features li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--color-primary);
    font-weight: bold;
  }

  .card-footer {
    text-align: center;
  }


  @media (max-width: 768px) {
    .pricing-hero {
      padding-top: 100px;
    }

    .pricing-cards {
      grid-template-columns: 1fr;
    }

    .pricing-card.featured {
      transform: none;
    }

    .pricing-card.featured:hover {
      transform: translateY(-8px);
    }

    .amount {
      font-size: 40px;
    }
  }
</style>
